{
    "compilerOptions": {
        "removeComments": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "lib": [ "es2017", "dom"],
        "baseUrl": "./src/"
    },
    "typeRoots": [
        "./node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "buildAOT",
        "temp"
    ],
    "angularCompilerOptions": {}
}