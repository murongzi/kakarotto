{
    "compilerOptions": {
        "outDir": "./dist/",
        "charset": "utf8",
        "allowJs": true,
        "checkJs": true,
        "target": "es2016",
        "baseUrl": ".",
        "jsx": "react",
        "module": "ES2015",
        "moduleResolution": "node",
        "sourceMap": true,

        "experimentalDecorators": true,
        "removeComments": true,
        "skipLibCheck": true
    },
    "lib": [
        "DOM",
        "ES6"
    ],
    "typeRoots": [
        "./node_modules/@types"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}